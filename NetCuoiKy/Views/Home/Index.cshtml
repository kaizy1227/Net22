<!-- ------------- featured products ---------------- -->
<div class="small-container">
    <h2 class="title">Sản Phẩm Mới</h2>
    <div class="row">
        @foreach (var item in listNewProducts)
        {
            var url = "/chi-tiet/" + item.ID + "/" + item.MetaTilte ;
            <div class="col-4">
                <a href="@url"><img src="@item.Image" alt="@item.Name"></a>
                <a href="@url"><h4>@item.Name</h4></a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>

                    <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm giỏ hàng</a></h4>
                </div>

                <p>@(item.Price.HasValue ? item.Price.Value.ToString("N0"):"Liên hệ") vnđ</p>

            </div>
        }


    </div>
    <h2 class="title">Sản Phẩm Hot</h2>
    <div class="row">
        @foreach (var item in listFeatureProducts)
        {
            var url = "/chi-tiet/" + item.MetaTilte + "-" + item.ID;
            <div class="col-4">
                <a href="@url"><img src="@item.Image" alt="@item.Name"></a>
                <a href="@url"><h4>@item.Name</h4></a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                    <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm giỏ hàng</a></h4>
                </div>
                <p>@(item.Price.HasValue ? item.Price.Value.ToString("N0"):"Liên hệ") vnđ</p>
            </div>
        }
    </div>

</div>
